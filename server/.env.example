# Ethereum wallet private key (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Base network RPC URL
BASE_RPC_URL=https://mainnet.base.org

# Port for the server
PORT=3001

# Gas limit for transactions (optional)
GAS_LIMIT=21000

# Max priority fee per gas in Gwei (optional)
MAX_PRIORITY_FEE=1.5

# Max fee per gas in Gwei (optional)
MAX_FEE=20

# Google Sheets Configuration
# ID of the Google Spreadsheet containing tasks
TASKS_SPREADSHEET_ID=your_spreadsheet_id_here

# Index of the sheet containing tasks (0-based, first sheet is 0)
TASKS_SHEET_INDEX=0
